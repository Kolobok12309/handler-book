{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "typeorm/*",
    "migrations/*",
    "seeds/*",
    "package.json"
  ],
  "exclude": [
    "dist/**/*"
  ]
}

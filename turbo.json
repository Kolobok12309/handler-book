{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts",
        "services/**/*.ts",
        "components/**/*.ts",
        "components/**/*.vue",
        "pages/**/*.ts",
        "pages/**/*.vue"
      ]
    },
    "lint": {}
  }
}
